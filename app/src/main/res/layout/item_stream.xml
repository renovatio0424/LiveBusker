<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/stream_thumnail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/busking" />

        <ImageView
            android:id="@+id/stream_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/stream_thumnail"
            android:layout_margin="5dp"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/stream_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stream_thumnail"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/stream_profile"
            android:layout_toRightOf="@+id/stream_profile"
            android:text="방송제목" />

        <TextView
            android:id="@+id/divider"
            style="@style/divider"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/stream_profile" />
    </RelativeLayout>
</LinearLayout>